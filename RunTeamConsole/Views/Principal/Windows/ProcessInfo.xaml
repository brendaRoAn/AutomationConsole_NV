<Window x:Class="RunTeamConsole.Views.Principal.Windows.ProcessInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunTeamConsole" xmlns:components="clr-namespace:RunTeamConsole.Components" xmlns:converters="clr-namespace:RunTeamConsole.Converters"
        mc:Ignorable="d"
        Icon="/img/icons/info.ico"
        Title="Process Details" Height="510" Width="750">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />
        <converters:ProcessHaveRestore x:Key="VisibleIfHasRestoreDateConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TabControl Margin="5,5,5,0" DataContext="{Binding SelectedProcess}">
            <TabItem x:Name="System_Info_Tab" Header="Target System Info">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34*"/>
                        <RowDefinition Height="203*"/>
                        <RowDefinition Height="169*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="56*"/>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="171*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel x:Name="Process_type" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Margin="54,0,0,0">
                        <TextBlock TextWrapping="Wrap" Height="16" Width="43" FontWeight="Bold" Text="Process:"></TextBlock>
                        <Image Source="{Binding CategoryImage}" Margin="8,12,0,10" MaxWidth="25"/>
                        <TextBlock TextWrapping="Wrap" Height="16" Width="183" Text="{Binding Title}"/>
                    </StackPanel>
                    <StackPanel x:Name="Status" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="3">
                        <TextBlock TextWrapping="Wrap" Height="16" Width="43" FontWeight="Bold"><Run Language="es-mx" Text="Status:"/></TextBlock>
                        <Image Source="{Binding CurrentStatusImage}" MaxWidth="15"/>
                        <TextBlock TextWrapping="Wrap" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"><Run Language="es-mx" Text="{Binding CurrentStatus, Mode=OneWay}"/></TextBlock>
                    </StackPanel>
                    <GroupBox x:Name="PAS_info" Header="Primary Application Server" Grid.Row="1" Margin="15,0,15,5" Grid.ColumnSpan="3">
                        <Grid Margin="10,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel x:Name="SID" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,11,0,0">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Text="SID"/><Run Language="es-mx" Text=":"/></TextBlock>
                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="{Binding SID, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel x:Name="Host" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,11,0,0" Grid.ColumnSpan="3" Grid.Row="1">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Host:"/></TextBlock>
                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="{Binding PAS, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel x:Name="Instance" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="7,11,10,0" Grid.Column="1" Grid.ColumnSpan="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Instance"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Text="{Binding InstanceNum, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel x:Name="Customer" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,11,0,0" Grid.Row="2" Grid.ColumnSpan="3" Height="18">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"><Run Language="es-mx" Text="Customer"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Text="{Binding Customer, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel x:Name="DQP" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,11,10,0" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="D/Q/P"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1"  Text="{Binding Environment, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel x:Name="Stack" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,11,10,0" Grid.Column="2" Grid.ColumnSpan="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Stack:"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Text="{Binding PASType, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel x:Name="OS" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,11,0,0" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="OS:"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Text="{Binding PASOS, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="AS_info" Header="Application Servers" Margin="15,0,15,10" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="AppList" DockPanel.Dock="Top" HorizontalContentAlignment="Stretch" ItemsSource="{Binding ApplList}">
                                <ListBox.ItemTemplate >
                                    <DataTemplate >
                                        <StackPanel x:Name="Systems" HorizontalAlignment="Stretch" Margin="10,11,0,0" VerticalAlignment="Top">
                                            <StackPanel x:Name="system_one" Orientation="Horizontal" Margin="0,0,0,10">
                                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Host:"/></TextBlock>
                                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="{Binding Hostname, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                                                <TextBlock TextWrapping="Wrap" FontWeight="Bold" Margin="10,0,0,0"><Run Language="es-mx" Text="OS"/><Run Text=":"/></TextBlock>
                                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="{Binding OS, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                    </GroupBox>
                    <GroupBox x:Name="DB_info" Header="Database Server" Grid.Row="2" Margin="15,0,15,10" Grid.ColumnSpan="3">
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="77*"/>
                                <ColumnDefinition Width="54*"/>
                                <ColumnDefinition Width="86*"/>
                                <ColumnDefinition Width="91*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel x:Name="DB_Host" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Grid.ColumnSpan="3" Height="18" Grid.RowSpan="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Text="Host"/><Run Text=":"/></TextBlock>
                                <TextBox HorizontalAlignment="Left" Grid.Row="1"  Text="{Binding DBS, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel x:Name="OS_DB" Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="2" Height="18" Margin="0,10,0,0" Grid.RowSpan="2" HorizontalAlignment="Right">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="OS:"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1"  Text="{Binding DBSOS, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel x:Name="DB_Type" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10,0,0" Height="18" Grid.Row="1" Grid.ColumnSpan="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="DB:"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1"  Text="{Binding DBType, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <StackPanel x:Name="DB_User" Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10,0,0" Height="18" Grid.Row="2" Grid.ColumnSpan="3">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="DB User:"/></TextBlock>
                                <TextBox HorizontalAlignment="Stretch" Grid.Row="1"  Text="{Binding DBType, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="10,0,0,0" IsEnabled="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                            </StackPanel>
                            <TextBox Margin="0,61,0,10" MinWidth="150" Text="{Binding Credentials.DBUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"/>
                            <!--
                            <StackPanel x:Name="Version" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="18" Width="104" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Version"/></TextBlock>
                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="12.0.0.1*" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                            <StackPanel x:Name="Patch" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="18" Width="104" Grid.ColumnSpan="3" Grid.Row="2">
                                <TextBlock TextWrapping="Wrap" FontWeight="Bold"><Run Language="es-mx" Text="Patch"/></TextBlock>
                                <TextBox HorizontalAlignment="Left" Grid.Row="1" Text="12.0.0.1*" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,0,0,0" IsEnabled="False"/>
                            </StackPanel>-->
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="Cretendials_and_emails" Header="Credentials">
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="189*"/>
                        <ColumnDefinition Width="230*"/>
                        <ColumnDefinition Width="230*"/>
                        <ColumnDefinition Width="235*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Margin="10,10,10,10" Grid.RowSpan="2" Visibility="{Binding Credentials.ShowSAPGroupBox, Converter={StaticResource VisibleIfTrueConverter}}" Grid.Column="3">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/img/processIcons/sap-logo.png" Margin="3,0" />
                                <TextBlock FontWeight="Bold"><Run Text="Credentials"/></TextBlock>
                            </StackPanel>
                        </GroupBox.Header>
                        <StackPanel>
                            <StackPanel Visibility="{Binding Credentials.ShowSAPCredentials, Converter={StaticResource VisibleIfTrueConverter}}">
                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Language="es-mx" Text="SAP IDM user"/></TextBlock>
                                <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Credentials.SAPGuiUser}" IsEnabled="False"/>
                                <TextBlock VerticalAlignment="Top" Margin="10,0,0,0"><Run Text="Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.SAPGuiPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.SAPGuiPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Visibility="{Binding Credentials.ShowSIDADMCredentials, Converter={StaticResource VisibleIfTrueConverter}}">
                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Language="es-mx" Text="SIDADM"/><Run Text=" User"/></TextBlock>
                                <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Credentials.SIDAdmUser}" IsEnabled="False"/>
                                <TextBlock VerticalAlignment="Top" Margin="10,0,0,0"><Run Text="Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.SIDAdmPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.SIDAdmPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock VerticalAlignment="Top" Margin="10,6,0,0"><Run Text="ITOPER Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.TargetITOPERPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.TargetITOPERPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Language="es-mx" Text="DDIC Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.TargetDDICPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.TargetDDICPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                                <!--
                                <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Credentials.SIDAdmUser}" IsEnabled="False"/>
                                -->
                            </StackPanel>
                            <StackPanel>
                                <TextBlock VerticalAlignment="Top" Margin="10,10,0,0"><Run Text="DDIC Cust Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.TargetDDICCustomerPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.TargetDDICCustomerPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="10,10,10,10" Visibility="{Binding Credentials.ShowOSCredentials, Converter={StaticResource VisibleIfTrueConverter}}" Grid.ColumnSpan="3">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/img/processIcons/other-hc-ico.png" Margin="3,0" />
                                <TextBlock FontWeight="Bold"><Run Text="OS Credentials"/></TextBlock>
                            </StackPanel>
                        </GroupBox.Header>
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Text="ITUSER"/></TextBlock>
                                <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Credentials.OSUser}" IsEnabled="False"/>
                                <TextBlock VerticalAlignment="Top" Margin="10,0,0,0"><Run Text="Password"/></TextBlock>
                                <Grid Margin="0,0,10,0">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.OSPassEncoded, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.OSPassEncoded, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Margin="10,10,10,10" Visibility="{Binding Credentials.ShowDBGroupBox, Converter={StaticResource VisibleIfTrueConverter}}" Grid.ColumnSpan="3" Grid.Row="1">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/img/processIcons/db-ico-p.png" Margin="3,0" />
                                <TextBlock FontWeight="Bold"><Run Text="DB Credentials"/></TextBlock>
                            </StackPanel>
                        </GroupBox.Header>
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top" Visibility="{Binding Credentials.ShowDBCredentials, Converter={StaticResource VisibleIfTrueConverter}}"><Run Language="es-mx" Text="Target DB"/></TextBlock>
                                <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Credentials.DBUser}" IsEnabled="False" Visibility="{Binding Credentials.ShowDBCredentials, Converter={StaticResource VisibleIfTrueConverter}}"/>
                                <TextBlock VerticalAlignment="Top" Margin="10,0,0,0" Visibility="{Binding Credentials.ShowDBCredentials, Converter={StaticResource VisibleIfTrueConverter}}"><Run Text="Password"/></TextBlock>
                                <Grid Margin="0,0,10,0" Visibility="{Binding Credentials.ShowDBCredentials, Converter={StaticResource VisibleIfTrueConverter}}">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.DBPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.DBPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                                <TextBlock VerticalAlignment="Top" Margin="10,10,0,0" Visibility="{Binding Credentials.ShowSchemaPassword, Converter={StaticResource VisibleIfTrueConverter}}"><Run Text="DB Schema Password"/></TextBlock>
                                <Grid Margin="0,0,10,0" Visibility="{Binding Credentials.ShowSchemaPassword, Converter={StaticResource VisibleIfTrueConverter}}">
                                    <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Credentials.DBSchemaPass, Mode=OneWay}" IsEnabled="False"/>
                                    <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Credentials.DBSchemaPass, Mode=OneWay}" IsEnabled="False"/>
                                    <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                        <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- EMAIL DESTINATIONS-->
