                    <GroupBox Margin="10,10,10,10" Grid.RowSpan="2" Visibility="{Binding Credentials.ShowSAPClientListCredentials, Converter={StaticResource VisibleIfTrueConverter}}" Grid.Column="4">
                        <GroupBox.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/img/processIcons/sap-logo.png" Margin="3,0" />
                                <TextBlock FontWeight="Bold"><Run Text="Client-User Sets"/></TextBlock>
                            </StackPanel>
                        </GroupBox.Header>
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding Credentials.ClientsList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Grid Margin="0,0,0,0">
                                                <TextBlock Margin="11,10,0,5"  FontStyle="Italic"  FontWeight="Bold" VerticalAlignment="Top">
                                                    <Run Text="Client-User Set"/>
                                                    <Run Text="{Binding SetNum}"/>
                                                </TextBlock>
                                            </Grid>
                                            <Grid Margin="0,0,0,0">
                                                <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Text="Client"/></TextBlock>
                                                <Grid Margin="45,0,0,0">
                                                    <TextBlock Margin="11,10,0,5" VerticalAlignment="Top"><Run Text="User"/></TextBlock>
                                                </Grid>
                                            </Grid>
                                            <Grid Margin="0,0,0,0">
                                                <TextBox Margin="10,0,95,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding ClientNum}" IsEnabled="False"/>
                                                <Grid Margin="45,0,0,0">
                                                    <TextBox Margin="10,0,10,6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding User}" IsEnabled="False"/>
                                                </Grid>
                                            </Grid>
                                            <TextBlock VerticalAlignment="Top" Margin="10,0,0,0"><Run Text="Password"/></TextBlock>
                                            <Grid Margin="0,0,10,0">
                                                <TextBox Visibility="Collapsed" Margin="10,0,10,0" VerticalAlignment="Top" Text="{Binding Password, Mode=OneWay}" IsEnabled="False"/>
                                                <components:BindablePasswordBox Margin="10,0,0,0" Password="{Binding Password, Mode=OneWay}" IsEnabled="False"/>
                                                <Button PreviewMouseDown="Button_MouseDown"  PreviewMouseUp="Button_MouseUp" HorizontalAlignment="Right" Background="White" BorderBrush="{x:Null}">
                                                    <Image Source="/img/icons/theye.png" HorizontalAlignment="Stretch" Width="15"/>
                                                </Button>
                                            </Grid>
