<UserControl x:Class="RunTeamConsole.Views.SapInstallPostSteps.SapInstallStepsToExecute"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunTeamConsole.Views.SapInstallPostSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="#FFD8D8D8" BorderThickness="1,1,1,1" CornerRadius="1,1,1,1" Margin="5,5,5,5">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="200*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold">Check the step you want to run</Label>

            <StackPanel Grid.Row="1" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >RZ10</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Rz10Active, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SAPPFPAR</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding SappfparActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SE38</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Se38Active, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >STMSCCMS</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Stmsccms, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >STMSTRUCK</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Stmstruck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >ST03N</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding St03, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >ST04N</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding St04n, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >ST06</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding St06, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SICK</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Sick, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SM12</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Sm12, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SM13</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Sm13, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80*"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Margin="50,0,0,0" VerticalAlignment="Center" >SM65</TextBlock>
                    <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding Sm65, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding IsSelected, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>