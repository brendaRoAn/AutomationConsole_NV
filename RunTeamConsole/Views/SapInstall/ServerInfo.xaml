                        <Border Grid.Row="8" Grid.ColumnSpan="2" BorderBrush="#FFD8D8D8" BorderThickness="1,1,1,0" CornerRadius="1,1,1,1" Margin="0,2,0,2">
                            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal">
