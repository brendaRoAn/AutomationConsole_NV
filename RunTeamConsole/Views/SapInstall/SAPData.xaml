<UserControl x:Class="RunTeamConsole.Views.SapInstall.SAPData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunTeamConsole.Views.SapInstall"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <GroupBox Margin="10,10,10,10" Padding="5,10,5,5" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Margin="3,0" />
                    <TextBlock FontWeight="Normal">SAP Data</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <StackPanel Height="385" Margin="10,0,390,0">
                    <TextBlock Height="18" TextWrapping="Wrap" Text="SAP SID User: " Width="120" HorizontalAlignment="Left" Margin="0,10,0,10"/>
                    <TextBox Text="{Binding SapSidUser}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Password: " Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <PasswordBox x:Name="Password" Height="18" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"></PasswordBox>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="SAP sidadm UID: " Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapSidAdmUid}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapadm UID: " Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapAdmUid}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapinst GID: " Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapInstGid}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                </StackPanel>
                <StackPanel Height="385" Margin="400,-385,8,0">
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapsys GID:" Width="130" HorizontalAlignment="Left" Margin="0,10,0,10"/>
                    <TextBox Text="{Binding SapSysGid}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapmnt remote:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapMntRemote}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapmnt NFS Server:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapMntNfsServer}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="sapmnt NFS Server Path:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding SapMntNfsServerPath}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Mount SAP Trans:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding MountSapTrans}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
