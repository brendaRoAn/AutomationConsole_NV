<UserControl x:Class="RunTeamConsole.Views.SapInstall.ExtraSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunTeamConsole.Views.SapInstall"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <GroupBox Margin="10,10,10,10" Padding="5,10,5,5" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Margin="3,0" />
                    <TextBlock FontWeight="Normal">Extra Data</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel>
                <StackPanel Height="385" Margin="10,0,390,0">
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Job Id:" Width="120" HorizontalAlignment="Left" Margin="0,10,0,10"/>
                    <TextBox Text="{Binding JobId}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Password:" Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <PasswordBox Height="18" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"></PasswordBox>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Hostname:" Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding Hostname}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Product:" Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding Product}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Base URL:" Width="120" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding BaseUrl}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                </StackPanel>
                <StackPanel Height="385" Margin="400,-385,8,0">
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Download Basket:" Width="130" HorizontalAlignment="Left" Margin="0,10,0,10"/>
                    <TextBox Text="{Binding DownloadBasket}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Master Password:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <PasswordBox Height="18" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"></PasswordBox>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="ASCS Instance Number:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding AscsInstanceNumber}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="PAS Instance Number:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding PasInstanceNumber}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                    <TextBlock Height="18" TextWrapping="Wrap" Text="Virtual Hostname:" Width="130" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                    <TextBox Text="{Binding VirtualHostname}" Height="18" TextWrapping="Wrap" Width="168" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="40,-28"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
